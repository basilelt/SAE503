# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox"
  config.vm.box = "bento/ubuntu-18.04"

  # v122 node
  config.vm.define "v122" do |v122|
    v122.vm.hostname = "master"
    v122.vm.network "private_network", ip: "192.168.56.10"

    v122.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
    end
  end
end
