# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
    config.vm.provider "virtualbox"

    # SSH Configuration
    config.ssh.username = "vagrant"
    # config.ssh.private_key_path = "~/.ssh/vagrant_common_key"

    # Provisioning to add the public key
    config.vm.provision "shell", inline: <<-SHELL
        mkdir -p /home/vagrant/.ssh
        echo "#{File.read(File.expand_path('~/.ssh/vagrant_common_key.pub'))}" >> /home/vagrant/.ssh/authorized_keys
        chown -R vagrant:vagrant /home/vagrant/.ssh
        chmod 600 /home/vagrant/.ssh/authorized_keys
    SHELL

    # Master node
    config.vm.define "master" do |master|
      master.vm.box = "debian/bullseye64"
      master.vm.hostname = "master"
      master.vm.network "private_network", ip: "192.168.56.10"

      # Set custom CPU and RAM here
      master.vm.provider "virtualbox" do |vb|
        vb.memory = "4096"
        vb.cpus = 8
      end
    end
  
    # Slave nodes
    vmnumber = 3
    (1..vmnumber).each do |i|
      config.vm.define "slave#{i}" do |slave|
        slave.vm.box = "debian/bullseye64"
        slave.vm.hostname = "slave#{i}"
        slave.vm.network "private_network", ip: "192.168.56.1#{i}"
        
        # Set custom CPU and RAM here
        slave.vm.provider "virtualbox" do |vb|
          vb.memory = "4096"
          vb.cpus = 4
        end
      end
    end
end